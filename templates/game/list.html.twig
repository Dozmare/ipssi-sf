{% extends 'base.html.twig' %}

{% block body %}
    <table>
        <thead>
        <tr>
            <th>name</th>
            <th>min</th>
            <th>max</th>
            <th>Editer</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
        <tr>
            <td>{{ game.name }}</td>
            <td>{{ game.minPlayer }}</td>
            <td>{{ game.maxPlayer }}</td>
            <td><a href="{{ path('app_game_edit', {id: game.id}) }}">Edit</a></td>
            <td><a href="{{ path('app_game_delete', {id: game.id}) }}">Delete</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

